<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bucket_background_color"
              android:orientation="vertical">

    <TextView
        android:id="@+id/bucketDetails_experimentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defaultBucketDetailsMargin"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/bucketDetails_selectionMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defaultBucketDetailsMargin">

        <RadioButton
            android:id="@+id/bucket_selection_automatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/experiment_automatic"/>

        <RadioButton
            android:id="@+id/bucket_selection_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/experiment_mannual"/>
    </RadioGroup>

    <Spinner
        android:id="@+id/bucketDetails_variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defaultBucketDetailsMargin"/>

    <Button
        android:id="@+id/bucketDetails_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defaultBucketDetailsMargin"
        android:text="@string/generic_save"/>
</LinearLayout>