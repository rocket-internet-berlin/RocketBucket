<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/defaultBucketItemMargin"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/bucket_experiment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="style/bucket_item_style"
        android:layout_margin="@dimen/defaultBucketDetailsMargin"/>

    <TextView
        android:id="@+id/bucket_variant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="style/bucket_item_style"
        android:layout_margin="@dimen/defaultBucketDetailsMargin"/>

    <TextView
        android:id="@+id/bucket_selection_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="style/bucket_item_style"
        android:layout_margin="@dimen/defaultBucketDetailsMargin"/>
</LinearLayout>